name: Add new issues to the Bento project

on:
  issues:
    types:
      - opened

jobs:
  add-to-project:
    name: Add issue to project
    runs-on: ubuntu-latest
    steps:
      - uses: actions/add-to-project@0.2.0
        with:
          # You can target a repository in a different organization
          # to the issue
          project-url: https://github.com/orgs/buildo/projects/33
          github-token: ${{ secrets.GITHUB_TOKEN }}
